@page
@model Lab5.Pages.Tours.IndexModel

@{
    ViewData["Title"] = "Тури";
}

<h1>Тури</h1>

<p>
    <a asp-page="Create">Добавити</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tour[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tour[0].Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tour[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tour[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Tour) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Редагувати</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Деталі</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
