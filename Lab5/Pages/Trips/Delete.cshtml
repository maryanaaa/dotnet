        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trip.TripDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trip.TripDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trip.Discount)
